<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_VIPPORTFOLIO_PROJECTS_VIEW_DEFAULT_TITLE">
        <message>
            <![CDATA[COM_VIPPORTFOLIO_PROJECTS_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request" >
        
            <field name="id" type="category"
                label="COM_VIPPORTFOLIO_CATEGORY"
                description="COM_VIPPORTFOLIO_VIEW_SELECT_CATEGORY_DESC"
                extension="com_vipportfolio"
                required="true"
            />
            
        </fieldset>
    </fields>
    
    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic">
	        <field name="modal" type="list" default="0"  label="COM_VIPPORTFOLIO_MODAL_WINDOW" description="COM_VIPPORTFOLIO_MODAL_WINDOW_DESC" >
	           <option value="">COM_VIPPORTFOLIO_NONE</option>
	           <option value="nivo">COM_VIPPORTFOLIO_LIGHTBOX_NIVO</option>
	           <option value="duncan">COM_VIPPORTFOLIO_DUNCAN_RESPONSIVE_LIGHTBOX</option>
	        </field>
	        <field name="list_display_title" type="radio" default="0"  label="COM_VIPPORTFOLIO_DISPLAY_TITLE" description="COM_VIPPORTFOLIO_DISPLAY_TITLE_DESC" class="btn-group">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	        <field name="title_linkable" type="radio" default="0" label="COM_VIPPORTFOLIO_TITLE_LINK" description="COM_VIPPORTFOLIO_TITLE_LINK_DESC" class="btn-group" >
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	         <field name="list_open_link" type="list" default="_self"  label="COM_VIPPORTFOLIO_OPEN_LINK" description="COM_VIPPORTFOLIO_OPEN_LINK_DESC" >
	            <option value="_self">COM_VIPPORTFOLIO_SAME_TAB</option>
	            <option value="_blank">COM_VIPPORTFOLIO_NEW_TAB</option>
	        </field>
	        <field name="image_linkable" type="radio" default="0"  label="COM_VIPPORTFOLIO_IMAGE_LINK" description="COM_VIPPORTFOLIO_IMAGE_LINK_DESC" class="btn-group">
	            <option value="0">JNO</option>
	            <option value="1">JYES</option>
	        </field>
	        <field name="pp_page" type="text" default="6" size="50" label="COM_VIPPORTFOLIO_PP_PAGE" description="COM_VIPPORTFOLIO_PP_PAGE_DESC" />
	        
	        <field name="thumb_width" type="text" default="200" size="50" label="COM_VIPPORTFOLIO_THUMB_WIDTH" description="COM_VIPPORTFOLIO_THUMB_WIDTH_DESC" />
	        <field name="thumb_height" type="text" default="200" size="50" label="COM_VIPPORTFOLIO_THUMB_HEIGHT" description="COM_VIPPORTFOLIO_THUMB_HEIGHT_DESC" />
	        
	        <field name="extra_image" type="radio" default="0"  label="COM_VIPPORTFOLIO_EXTRA_IMAGE" description="COM_VIPPORTFOLIO_EXTRA_IMAGE_DESC" class="btn-group">
	            <option value="0">JHIDE</option>
	            <option value="1">JSHOW</option>
	        </field>
	        <field name="ei_thumb_width" type="text" default="50" size="50" label="COM_VIPPORTFOLIO_EXTRA_THUMB_WIDTH" description="COM_VIPPORTFOLIO_EXTRA_THUMB_WIDTH_OPTION_DESC" />
	        <field name="ei_thumb_height" type="text" default="50" size="50" label="COM_VIPPORTFOLIO_EXTRA_THUMB_HEIGHT" description="COM_VIPPORTFOLIO_EXTRA_THUMB_HEIGHT_OPTION_DESC" />
	        <field name="extra_max" type="text" default="3" size="50" label="COM_VIPPORTFOLIO_EI_NUM" description="COM_VIPPORTFOLIO_EI_NUM_DESC" />
       </fieldset>
    </fields>
</metadata>
